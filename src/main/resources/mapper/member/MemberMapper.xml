<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC  "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.soft.shopping.mapper.MemberMapper">
    <select id="login" resultType="MemberLoginDTO">
        select
        user_id,
        user_pw
        from cyci_user;
    </select>

    <insert id="register" parameterType="MemberRegisterDTO">
        insert into cyci_user (user_id,user_pw,user_email) values
        (#{userId},#{userPw},#{userEmail})
    </insert>
</mapper>